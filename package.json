{
  "name": "vscode-scpi",
  "displayName": "SCPI Notebook",
  "description": "A notebook development and execution environment for SCPI (Standard Commands for Programmable Instruments)",
  "version": "0.0.1",
  "publisher": "isaacguo",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaacguo/vscode-scpi.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Notebooks"
  ],
  "activationEvents": [
    "onLanguage:scpi",
    "onNotebook:scpi-notebook"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "scpi",
        "aliases": [
          "SCPI",
          "scpi"
        ],
        "extensions": [
          ".scpinb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "scpi",
        "scopeName": "source.scpi",
        "path": "./syntaxes/scpi.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "SCPI",
      "properties": {
        "scpi.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter with pyvisa installed."
        },
        "scpi.manualDirectory": {
          "type": "string",
          "default": ".scpi",
          "description": "Directory containing instrument SCPI manuals (Markdown files). Defaults to .scpi in the workspace root."
        },
        "scpi.mcpServerEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable the MCP server for AI assistant integration."
        }
      }
    },
    "commands": [
      {
        "command": "scpi.getAIContext",
        "title": "Get SCPI AI Context"
      },
      {
        "command": "scpi.configureConnection",
        "title": "Configure Instrument Connection",
        "category": "SCPI"
      },
      {
        "command": "scpi.configurePythonEnvironment",
        "title": "Configure Python Environment",
        "category": "SCPI"
      }
    ],
    "notebooks": [
      {
        "type": "scpi-notebook",
        "displayName": "SCPI Notebook",
        "selector": [
          {
            "filenamePattern": "*.scpinb"
          }
        ]
      }
    ],
    "iconThemes": [
      {
        "id": "scpi-file-icons",
        "label": "SCPI File Icons",
        "path": "./assets/scpi-icon-theme.json"
      }
    ],
    "menus": {
      "notebook/toolbar": [
        {
          "command": "scpi.configureConnection",
          "when": "notebookType == scpi-notebook",
          "group": "navigation"
        },
        {
          "command": "scpi.configurePythonEnvironment",
          "when": "notebookType == scpi-notebook",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src test --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@resvg/resvg-js": "^2.6.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "mocha": "^10.3.0",
    "sharp": "^0.34.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "tree-sitter-scpi": "latest",
    "web-tree-sitter": "^0.20.8"
  }
}
